<h3>Contact</h3>
<div class="card z-depth-3">
  <div class="card-content">
    <p>Do you wanna talk? Find me on the map and we can have some drinks</p>
    <br/>
    <div id="map"></div>
  </div>
</div>

<style>
  #map {
    width:100%;
    height: 400px;
  }
</style>

<script src="https://maps.googleapis.com/maps/api/js"></script>
<script>
  function initialize() {
    var mapCanvas = document.getElementById('map');
    var mapOptions = {
      center: new google.maps.LatLng(10.790966, 106.719141),
      zoom: 17,
      mapTypeId: google.maps.MapTypeId.SATELLITE
    }
    var map = new google.maps.Map(mapCanvas, mapOptions);
    var marker = new google.maps.Marker({
      position: new google.maps.LatLng(10.790966, 106.719141),
      title: "Here is Saigon Pearl!"
    });
    marker.setMap(map);
  }
  google.maps.event.addDomListener(window, 'load', initialize);
</script>